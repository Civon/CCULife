<resources>

    <!--
        BaseService application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/AppBaseTheme.ActionBar</item>
        <item name="android:actionBarSize">60dp</item>
        <item name="android:actionBarTabTextStyle">@style/AppBaseTheme.ActionBar.TabBar.Text</item>
        <item name="android:windowBackground">@drawable/app_background</item>
    </style>

    <style name="AppBaseTheme.ActionBar.TabBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppBaseTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppBaseTheme.ActionBar.Text</item>
        <item name="android:subtitleTextStyle">@style/AppBaseTheme.ActionBar.Subtitle</item>
        <item name="android:background">@drawable/action_bar_background</item>
    </style>

    <style name="AppBaseTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/DrakBrown</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>
